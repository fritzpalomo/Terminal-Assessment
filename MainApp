import javax.swing.DefaultListModel;
import javax.swing.JOptionPane;

public class MainAppGUI extends javax.swing.JFrame {

    private DefaultListModel<String> recordListModel;

    public MainAppGUI() {
        initComponents();

        // Initialize the DefaultListModel
        recordListModel = new DefaultListModel<>();

        // Sample records (you can replace this with data from your database)
        recordListModel.addElement("Record 1");
        recordListModel.addElement("Record 2");
        recordListModel.addElement("Record 3");

        // Set the model to the JList
        recordList.setModel(recordListModel);
    }

    // Method to delete selected record
    private void deleteRecordButtonActionPerformed(java.awt.event.ActionEvent evt) {
        int selectedIndex = recordList.getSelectedIndex();
        if (selectedIndex != -1) {
            // Confirm deletion
            int option = JOptionPane.showConfirmDialog(this, "Are you sure you want to delete this record?", "Confirm Deletion", JOptionPane.YES_NO_OPTION);
            if (option == JOptionPane.YES_OPTION) {
                recordListModel.remove(selectedIndex);
            }
        } else {
            JOptionPane.showMessageDialog(this, "Please select a record to delete.");
        }
    }

    // Auto-generated code by NetBeans
    private void initComponents() {

        jScrollPane1 = new javax.swing.JScrollPane();
        recordList = new javax.swing.JList<>();
        deleteRecordButton = new javax.swing.JButton();

        setDefaultCloseOperation(javax.swing.WindowConstants.EXIT_ON_CLOSE);
        setTitle("Main Application");

        jScrollPane1.setViewportView(recordList);

        deleteRecordButton.setText("Delete Record");
        deleteRecordButton.addActionListener(new java.awt.event.ActionListener() {
            public void actionPerformed(java.awt.event.ActionEvent evt) {
                deleteRecordButtonActionPerformed(evt);
            }
        });

        javax.swing.GroupLayout layout = new javax.swing.GroupLayout(getContentPane());
        getContentPane().setLayout(layout);
        layout.setHorizontalGroup(
            layout.createParallelGroup(javax.swing.GroupLayout.Alignment.LEADING)
